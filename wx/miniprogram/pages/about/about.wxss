/* pages/about/about.wxss */
/* 外层背景及其位置 */
.view_about{
  width: 700rpx;
  margin: 0 auto;
}
.view_about_first{
  width:100%;
  height: 310rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  background-size: 190rpx 100%;
}

.view_about_text{
  font-size:36rpx;
  font-weight: bold;
  color: rgb(230, 224, 224);
  margin-left: 40rpx;
  padding-top: 30rpx
  
}
.view_about_img{
  margin: 35rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  
}
.view_about_img image{
  width: 120rpx;
  height: 160rpx;
  margin-right: -40rpx;
}
.view_text{
  margin-left:60rpx; 
  font-size: 36rpx;
  font-weight: bold;
  color:rgb(219, 210, 210);
}
/* top250 */
.view_about_second{
  width: 100%;
  height: 170rpx;
  /* background: pink; */
  margin-top: 25rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  }
  .view_about_top{
    width: 170rpx;
    height: 170rpx;
    background-size: 170rpx 170rpx;
  }
  /* 右边文字 */
  .view_about_right{
    width: 530rpx;
    height: 140rpx;
    box-sizing: border-box;
    border: 1rpx solid gainsboro;
    border-left: none;
    font-size: 24rpx;
    line-height: 40rpx;
    border-radius: 10rpx;
  }
  .view_about_right>view{
    margin-top:5rpx; 
    margin-left: 35rpx;
  }
  .view_about_text_last{
    margin-left:10rpx; 
    font-size: 18rpx;
    color:#ff0015;
  }
  .class_view_logo{
    font-size: 30rpx;
    color: white;
    text-align: center;
    line-height: 170rpx;
    font-weight: bold;
  }