/* pages/search/search.wxss */
.view_back{
   background: rgb(225, 235, 223);
}
.view_header{
  width: 700rpx;
  margin: 0 auto;
}
.view_book{
  width: 100%;
  height: 210rpx;
  display: flex;
  justify-content:space-around;
  margin-top: 25rpx;
  padding:20rpx 0;
  align-items: center;
  background: white;
  border-radius: 10rpx;
}
.view_book_img{
  width: 170rpx;
  height: 210rpx;
}
.view_book_right{
  width: 430rpx;
  height: 210rpx;
  /* background: red; */
}
.view_book_title{
  font-size: 28rpx;
  margin-top:5rpx; 

}
.view_book_author{
  font-size:24rpx;
  margin-top: 5rpx;
}
.view_book_sub{
  font-size:22rpx;
  color:rgb(197, 188, 188);
  margin-top:20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.view_a_older{
  width: 100%;
  height: 90rpx;
  background: rgb(229, 245, 225);
  margin: 0 auto;
  display: flex;
  font-size: 26rpx;
  justify-content: space-around;
}
.view_a_older>view{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: rgb(174, 243, 177);
  color: rgb(104, 101, 101);
  border-radius: 40rpx;
  margin-top:15rpx;
}
.view_a_older>.book{
  background: #54ec54;
  color: white;
}
/* 音乐部分 */
.view_book_img_tag{
  width: 180rpx;
  height: 180rpx;
}
.view_book_sub_last{
  font-size:22rpx;
  color:rgb(197, 188, 188);
  margin-top:20rpx;
}
.view_book_right_last{
  width: 430rpx;
  height: 210rpx;
  margin-top:20rpx;
}