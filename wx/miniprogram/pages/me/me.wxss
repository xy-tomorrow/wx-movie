.view_me{
  width: 100%;
  height: 360rpx;
  background: #54ec54;
}
.view_me_one{
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx; 
}
.view_deng{
  width: 250rpx;
  height: 70rpx;
  background: white;
  color: rgb(57, 110, 57);
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 30rpx;
}
.view_width{
  width: 650rpx;
  margin: 0 auto;
}
.view_logo{
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  /* background: red; */
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  margin:30rpx 0; 
}
.view_logo_img{
  width: 70rpx;
  height: 70rpx;
  color: white;
  font-weight: bold;
  font-size: 26rpx;
  border-radius: 50%;
  background: #00CC00;

}
.view_userimg{
  width:100rpx;
  height: 100rpx;
}
.view_user{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  margin-top:20rpx;
  border-top: 1rpx solid rgb(231, 238, 231);
  border-bottom: 1rpx solid rgb(231, 238, 231);
}
.view_name{
  width: 500rpx;
  margin-left: 40rpx;
  
}
.view_title{
  font-size: 22rpx;
  margin-top: 10rpx;
}
.view_subtitle{
  font-size: 18rpx;
  color:rgb(170, 165, 165);
  margin-top: 10rpx;
}
.view_user_title{
  font-size: 28rpx;
  font-weight: bold;
}
.view_dit{
  display: flex;
  justify-content: space-between;
  margin-top:70rpx;
  margin-bottom: 20rpx;
  text-align: center;

}
.view_dit>button{
  width: 45%;
  height: 60rpx;
  background: gainsboro;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 30rpx;
}
.view_dit>.view_ok{
  background: #00CC00;
  color:white;
}
.view_header_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.view_header_name{
  font-size: 28rpx;
  color: white;
  margin-top: 15rpx;
  text-align: center;
}
/* 退出 */
.view_ord{
  width: 100rpx;
  height: 40rpx;
  /* background: red; */
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  color: white;
  border: 1rpx solid white;
}
.view_righ{
  display: flex;
  flex-direction: row-reverse ;
  margin-right: 50rpx; 
}
/* 书影音 */
.view_books{
  width: 660rpx;
  margin:30rpx auto;
  height: 60rpx;

}
.view_music_order{
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
}
.view_music{
  font-size: 30rpx;
}
.view_music_right{
  font-size: 24rpx;
  color: gray;
}
/* 下面的分析 */
.view_b_last{
  width: 700rpx;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  align-items: center;
  font-size: 24rpx;
  line-height: 40rpx;
  border-bottom: 1rpx solid gainsboro;
}
.view_last_img{
  width: 40rpx;
  height: 40rpx;
}
.view_last_a{
  font-size: 26rpx;
  color: rgba(70, 227, 248, 0.815);
}
.view_last_b{
  font-size: 20rpx;
   color: rgba(70, 227, 248, 0.815);
}
.view_last_cd{
  font-size: 22rpx;
  color: rgb(187, 185, 185);
}
.view_last_ok{
  width:130rpx;
  text-align: center;
  height: 40rpx;
  background: rgb(231, 226, 226);
  font-size: 20rpx;
  border-radius: 10rpx;
}